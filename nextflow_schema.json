{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nexomis/hannot/1.0.0/nextflow_schema.json",
    "title": "nexomis/hannot pipeline parameters",
    "description": "Homology-based annotation of sequences",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["input", "prot", "out_dir"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/csv",
                    "pattern": ".csv$",
                    "schema": "assets/input_schema.json",
                    "description": "Path to comma-separated file containing information about the assembly to annot"
                },
                "prot": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/csv",
                    "pattern": ".csv$",
                    "schema": "assets/prot_schema.json",
                    "description": "Path to comma-separated file containing the proteome to use for annotation."
                },
                "out_dir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved.",
                    "default": "out_dir"
                },
                "publish_dir_mode": {
                    "type": "string",
                    "description": "PublishDir mode for process",
                    "default": "link"
                }
            }
        },
        "annotation_options": {
            "title": "Annotation options",
            "type": "object",
            "description": "Settings related to the annotation of sequences.",
            "properties": {
                "regex_prot_name": {
                    "type": "string",
                    "default": "^>.*GN=([^ ]+).*$",
                    "description": "Regex pattern to extract protein names from annotations."
                },
                "miniprot_opts": {
                    "type": "string",
                    "default": "-k 3 -L 5 -O 5 -n 1 -N 1000 -l 3 -E 0 -J 5 -F 8 -B 5 --outs 0.1 --outn 5",
                    "description": "Options for the Miniprot software."
                }
            }
        },
        "resources_options": {
            "title": "Resources options",
            "type": "object",
            "description": "Define the default resources for Nextflow processes.",
            "properties": {
                "ncpus_low": {
                    "type": "integer",
                    "default": 4,
                    "description": "Number of CPUs for low resource processes."
                },
                "ncpus_med": {
                    "type": "integer",
                    "default": 8,
                    "description": "Number of CPUs for medium resource processes."
                },
                "ncpus_high": {
                    "type": "integer",
                    "default": 16,
                    "description": "Number of CPUs for high resource processes."
                },
                "biocontainers_registry": {
                    "type": "string",
                    "default": "public.ecr.aws",
                    "description": "Domain for the biocontainers registry."
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/annotation_options"
        },
        {
            "$ref": "#/definitions/resources_options"
        }
    ]
}
